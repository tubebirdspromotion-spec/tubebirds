# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
# For MySQL (recommended for production)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=tubebirds
DB_PORT=3306

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRE=30d

# Frontend URL
CLIENT_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# ============================================
# RAZORPAY PAYMENT GATEWAY (PRIMARY)
# ============================================
# Get your keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret_key_here

# Razorpay Webhook Secret (for webhook verification)
# Get this from: https://dashboard.razorpay.com/app/webhooks
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here

# ============================================
# EMAIL CONFIGURATION
# ============================================
# For Gmail (recommended for development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password

# Email Sender Details
EMAIL_FROM=noreply@tubebirds.com
EMAIL_FROM_NAME=TubeBirds

# Alternative: Resend.com (recommended for production)
# RESEND_API_KEY=re_xxxxxxxxxxxxx

# ============================================
# CLOUDINARY (for image/file uploads)
# ============================================
# Get your credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================
# ADMIN CREDENTIALS (for initial setup/seeding)
# ============================================
ADMIN_EMAIL=admin@tubebirds.com
ADMIN_PASSWORD=Admin@12345
ADMIN_NAME=Admin User
ADMIN_PHONE=+91XXXXXXXXXX

# ============================================
# SECURITY & RATE LIMITING
# ============================================
# Rate limiting for API requests
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# GST CONFIGURATION
# ============================================
# GST Rate (percentage) - Default 18% in India
GST_RATE=18

# Business GST Number (optional, for invoices)
BUSINESS_GST_NUMBER=your_gst_number_here
BUSINESS_NAME=TubeBirds Promotion Services
BUSINESS_ADDRESS=Your Business Address Here
BUSINESS_CITY=City
BUSINESS_STATE=State
BUSINESS_PINCODE=000000

# ============================================
# OPTIONAL: Alternative Payment Gateways
# ============================================
# Stripe (if you want to use Stripe as well)
# STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
# STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# PayU (if you want to use PayU)
# PAYU_MERCHANT_KEY=your_merchant_key
# PAYU_MERCHANT_SALT=your_merchant_salt
# PAYU_MODE=test

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Set to 'true' to enable detailed error messages in API responses
DETAILED_ERRORS=true

